@model IEnumerable<Destek.Models.talepmaster>



<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Talep Listesi</h3>
            </div>
            <div class="panel-body">
                <table id="datatable" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Baslik)
                            </th>
                            @*<th>
                                @Html.DisplayNameFor(model => model.Icerik)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Cevap)
                            </th>*@
                          
                            <th>
                                @Html.DisplayNameFor(model => model.BaslangicTarihi)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.BitisTarihi)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.GMT)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Onay)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Durum)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            string data = "";
                            if (item.Onay == "E")
                            {
                                data = "class=success";
                            }
                            else if (item.Durum == "K")
                            {
                                data = "class=danger";
                            }
                            else
                            {
                                data = "class=warning ";
                            }
                           
                            
                            <tr @data>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Baslik)
                                </td>
                                @*<td>
                                    @Html.DisplayFor(modelItem => item.Icerik)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cevap)
                                </td>*@
                              
                                <td>
                                    @Html.DisplayFor(modelItem => item.BaslangicTarihi)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BitisTarihi)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.GMT)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Onay)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Durum)
                                </td>
                                <td>
                                    @Html.ActionLink("Cevapla", "Detay", new { id = item.Id }) |
                                    @Html.ActionLink("Sil", "Sil", new { Id = item.Id })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div> <!-- End Row -->
