@model Destek.Models.talepmaster

@{
    ViewBag.Title = "Detay";
}

<h2>Detay</h2>


@using (Html.BeginForm("Kaydet", "AdminTalep", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    if (Model != null && Model.Id > 0)
    {
        @Html.HiddenFor(s => s.Id);

    }
    @Html.HiddenFor(s => s.FırmaId);
    <div class="form-body">
        <div class="row">
            @if (Model != null && Model.Id > 0)
            {
                <div class="col-md-1">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Id, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Id, new { htmlAttributes  = new { @class = "form-control", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
                    </div>
                </div>
            }

            <div class="col-md-7">
                <div class="form-group">
                    @Html.LabelFor(model => model.Baslik, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Baslik, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.Baslik, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">

                    @Html.LabelFor(model => model.Tipi, htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownListFor(model => model.Tipi, SelectCore.TalepTipiListesi(), new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Tipi, "", new { @class = "text-danger" })

                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">

                    @Html.LabelFor(model => model.AciliyetDurumu, htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownListFor(model => model.AciliyetDurumu, SelectCore.AciliyetListesi(), new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.AciliyetDurumu, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                <div class="form-group">
                    @Html.LabelFor(model => model.BaslangicTarihi, htmlAttributes: new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.BaslangicTarihi, "{0:yyyy/MM/dd}", new { @class = "form-control date" })
                    @Html.ValidationMessageFor(model => model.BaslangicTarihi, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    @Html.LabelFor(model => model.BitisTarihi, htmlAttributes: new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.BitisTarihi, "{0:yyyy/MM/dd}", new { @class = "form-control date" })
                    @Html.ValidationMessageFor(model => model.BitisTarihi, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.Icerik, htmlAttributes: new { @class = "control-label" })
                    @Html.TextAreaFor(model => model.Icerik, new { @class = "form-control", @rows = 10, @readonly = "readonly" })
                    @Html.ValidationMessageFor(model => model.Icerik, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.Cevap, htmlAttributes: new { @class = "control-label" })
                    @Html.TextAreaFor(model => model.Cevap, new { @class = "form-control", @rows = 10})
                    @Html.ValidationMessageFor(model => model.Cevap, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <input type="submit" value="Kaydet" class="btn btn-primary form-control" />
            </div>
        </div>

    </div>

}


<div>
    @Html.ActionLink("Listeye Dön", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
